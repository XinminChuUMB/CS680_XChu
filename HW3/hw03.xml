<?xml version="1.0"?>
<!--
  To run this build script, type:

  ant -f hw03.xml

  on a shell.
-->

<project name="hw02" basedir="."  default="compile">
    <property environment="env"/>
    <echo message="JUNIT: ${env.JUNIT}" />
    <echo message="ANT_HOME: ${env.ANT_HOME}" />

    <property name="src" location="src" />
    <property name="bin" location="bin" />
    <property name="test.src" location="test/src" />
    <property name="test.bin" location="test/bin" />

    <path id="classpath">
        <pathelement location="bin" />
        <pathelement location="test/bin" />
        <fileset dir="${env.JUNIT}" includes="*junit*.jar" excludes="*vintage*.jar" />
        <fileset dir="${env.JUNIT}" includes="*opentest4j*.jar" />
        <fileset dir="${env.JUNIT}" includes="*apiguardian*.jar" />
    </path>
    <echo message="${toString:classpath}" />

    <target name="init">
        <mkdir dir="${bin}"/>
        <mkdir dir="${test.bin}"/>
    </target>

    <target name="compile" depends="init">
        <javac srcdir="${src}" destdir="${bin}" includeAntRuntime="no">
            <classpath refid="classpath"/>
            <include name="edu/umb/cs680/hw03/PrimeGenerator.java"/>
        </javac>
        <javac srcdir="${test.src}" destdir="${test.bin}" includeAntRuntime="no">
            <classpath refid="classpath"/>
            <include name="edu/umb/cs680/hw03/PrimeGeneratorTest.java"/>
        </javac>
    </target>

    <target name="run" depends="compile">
        <java classname="edu.umb.cs680.hw03.PrimeGenerator"
              classpathref="classpath"
              fork="true"/>
    </target>

    <target name="junit" depends="compile">
        <junit printsummary="yes" haltonfailure="no">
            <classpath refid="test.src" />
            <classpath location="${test.bin}" />
            <test name="primeGeneratorTest" haltonfailure="no">
                <formatter type="plain" />
                <formatter type="xml" />
            </test>
        </junit>
    </target>


</project>


